---
import Text from './Text.astro';
import Mono from './Mono.astro';

const { name, syntax, encoding, encoding2, description } = Astro.props;
---

<div class="flex flex-row">
    <div class="flex w-16">
        <Mono>{name}</Mono>
    </div>

    <div class="flex w-32">
        <Mono>{syntax}</Mono>
    </div>

    <div class="flex flex-col w-64">
        <Mono>{encoding}</Mono>
        <Mono>{encoding2}</Mono>
    </div>

    <div class="flex flex-grow">
        <Text>{description}</Text>
    </div>
</div>
